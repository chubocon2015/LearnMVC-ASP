@model IEnumerable<WebApplication1.Models.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    <a href="@Url.Action("Create New", "Product")">Them moi</a>"
</p>
<table class="table">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Giá tiền
        </th>
        <th>
            Ngày
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <mark>@item.Name</mark>
        </td>
        <td>
            @item.Price.ToString("N0")
        </td>
        <td>
            @item.Expire.ToString("dd/MM/yyyy")
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
           <a href="@Url.Action("Edit","Product", new {id = item.id})">Sua</a>"
        </td>
    </tr>
}

</table>
